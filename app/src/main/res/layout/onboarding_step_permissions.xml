<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/onboarding_permissions_title"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/onboarding_permissions_body"
        android:textColor="#94A3B8"
        android:textSize="14sp"
        android:lineSpacingExtra="3dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bg_onboarding_card"
            android:padding="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/onboarding_perm_accessibility"
                android:textColor="#E2E8F0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/perm_accessibility_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textColor="#93C5FD"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/perm_accessibility_button"
            style="@style/OnboardingInlineButton"
            android:layout_marginTop="10dp"
            android:text="@string/onboarding_open_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_onboarding_card"
            android:padding="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/onboarding_perm_overlay"
                android:textColor="#E2E8F0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/perm_overlay_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textColor="#93C5FD"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/perm_overlay_button"
            style="@style/OnboardingInlineButton"
            android:layout_marginTop="10dp"
            android:text="@string/onboarding_open_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_onboarding_card"
            android:padding="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/onboarding_perm_battery"
                android:textColor="#E2E8F0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/perm_battery_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textColor="#93C5FD"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/perm_battery_button"
            style="@style/OnboardingInlineButton"
            android:layout_marginTop="10dp"
            android:text="@string/onboarding_open_settings" />
    </LinearLayout>
</LinearLayout>

