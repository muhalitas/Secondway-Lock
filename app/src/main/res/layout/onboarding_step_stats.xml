<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/onboarding_stats_title"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stats_daily_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="2h 0m"
        android:textColor="#FFFFFF"
        android:textSize="44sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/onboarding_stats_subtitle"
        android:textColor="#94A3B8"
        android:textSize="14sp"
        android:lineSpacingExtra="3dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/onboarding_stats_projection_kicker"
        android:textColor="#93C5FD"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stats_years_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="1.2"
        android:textColor="#C084FC"
        android:textSize="84sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_stats_projection_unit"
        android:textColor="#E2E8F0"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/onboarding_stats_projection_body"
        android:textColor="#94A3B8"
        android:textSize="13sp"
        android:lineSpacingExtra="3dp" />
</LinearLayout>

