<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_owner_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:text="@string/status_not_device_owner" />

        <Button
            android:id="@+id/button_remove_device_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_remove_device_owner"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/readme_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/readme_content"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.2"
        android:paddingBottom="24dp" />

    </LinearLayout>
</ScrollView>
