<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/onboarding_trigger_title"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/onboarding_trigger_body"
        android:textColor="#94A3B8"
        android:textSize="14sp"
        android:lineSpacingExtra="3dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <TextView
        android:id="@+id/trigger_stress"
        style="@style/OnboardingChoiceRow"
        android:text="@string/trigger_stress" />

    <TextView
        android:id="@+id/trigger_lonely"
        style="@style/OnboardingChoiceRow"
        android:layout_marginTop="10dp"
        android:text="@string/trigger_lonely" />

    <TextView
        android:id="@+id/trigger_night"
        style="@style/OnboardingChoiceRow"
        android:layout_marginTop="10dp"
        android:text="@string/trigger_night" />

    <TextView
        android:id="@+id/trigger_bored"
        style="@style/OnboardingChoiceRow"
        android:layout_marginTop="10dp"
        android:text="@string/trigger_bored" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/trigger_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_onboarding_pill"
        android:text="@string/onboarding_trigger_default"
        android:textColor="#E2E8F0"
        android:textSize="13sp" />
</LinearLayout>

