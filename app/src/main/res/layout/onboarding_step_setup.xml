<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/onboarding_setup_title"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/onboarding_setup_body"
        android:textColor="#94A3B8"
        android:textSize="14sp"
        android:lineSpacingExtra="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_onboarding_pill"
        android:text="@string/onboarding_setup_privacy"
        android:textColor="#E2E8F0"
        android:textSize="13sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/onboarding_profile_title"
        android:textColor="#D6E6FF"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_strict"
        style="@style/OnboardingChoiceRow"
        android:layout_marginTop="10dp"
        android:text="@string/onboarding_profile_strict" />

    <TextView
        android:id="@+id/profile_balanced"
        style="@style/OnboardingChoiceRow"
        android:layout_marginTop="8dp"
        android:text="@string/onboarding_profile_balanced" />

    <TextView
        android:id="@+id/profile_focus"
        style="@style/OnboardingChoiceRow"
        android:layout_marginTop="8dp"
        android:text="@string/onboarding_profile_focus" />

    <TextView
        android:id="@+id/profile_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/onboarding_profile_selected_balanced"
        android:textColor="#94A3B8"
        android:textSize="12sp" />
</LinearLayout>
