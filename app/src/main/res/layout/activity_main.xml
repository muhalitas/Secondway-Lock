<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    android:background="@color/sw_bg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/browser_empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="36dp"
            android:background="@color/sw_bg"
            android:visibility="gone">

            <ImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:contentDescription="@string/app_name"
                android:alpha="0.85"
                android:src="@drawable/ic_onboarding_badge" />

            <TextView
                android:id="@+id/browser_empty_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="@string/browser_empty_title"
                android:textColor="@color/sw_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/browser_empty_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="@string/browser_empty_subtitle"
                android:textColor="@color/sw_text_muted"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/browser_empty_primary"
                style="@style/SecondwayButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/browser_empty_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/browser_empty_secondary"
                style="@style/SecondwayButtonSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/browser_empty_secondary" />
        </LinearLayout>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/load_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:max="100"
        android:progress="0"
        android:visibility="gone"
        android:progressTint="@color/browser_progress_fg"
        android:progressBackgroundTint="@color/browser_progress_bg" />

    <LinearLayout
        android:id="@+id/toolbar_url_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/sw_surface"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="6dp">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_home"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:tint="@color/browser_icon_tint" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <EditText
                android:id="@+id/url_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingEnd="52dp"
                android:maxLines="1"
                android:inputType="textUri"
                android:imeOptions="actionGo"
                android:background="@drawable/bg_url_bar"
                android:hint="@string/url_bar_hint"
                android:textSize="14sp"
                android:textColor="@color/browser_url_text"
                android:textColorHint="@color/browser_url_hint" />

            <ImageButton
                android:id="@+id/btn_lock"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_clover"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/open_lock_screen"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:tint="@color/browser_icon_tint" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/btn_add_tab"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add_tab"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_add_tab"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:tint="@color/browser_icon_tint" />

        <ImageButton
            android:id="@+id/btn_allowlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_allowlist_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/allowlist_add_site"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:tint="@color/browser_icon_tint" />

        <FrameLayout
            android:id="@+id/toolbar_tabs_frame"
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/btn_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_tabs"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/btn_tabs"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:tint="@color/browser_icon_tint" />

            <TextView
                android:id="@+id/tab_count_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_tab_count_badge"
                android:gravity="center"
                android:minWidth="24dp"
                android:minHeight="24dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:textColor="@color/sw_text"
                android:textSize="12sp"
                android:visibility="visible" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/settings_menu"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:tint="@color/browser_icon_tint" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sw_bg"
        app:itemIconTint="@color/bottom_nav_item_tint"
        app:itemTextColor="@color/bottom_nav_item_tint"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav" />
</LinearLayout>
