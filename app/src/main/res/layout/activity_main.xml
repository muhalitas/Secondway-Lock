<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ProgressBar
        android:id="@+id/load_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:max="100"
        android:progress="0"
        android:visibility="gone"
        android:progressTint="#1A73E8"
        android:progressBackgroundTint="#DADCE0" />

    <LinearLayout
        android:id="@+id/toolbar_url_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F1F3F4"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="6dp">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_home"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:tint="#5F6368" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <EditText
                android:id="@+id/url_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingEnd="52dp"
                android:maxLines="1"
                android:inputType="textUri"
                android:imeOptions="actionGo"
                android:background="@drawable/bg_url_bar"
                android:hint="@string/url_bar_hint"
                android:textSize="14sp"
                android:textColor="#202124"
                android:textColorHint="#5F6368" />

            <ImageButton
                android:id="@+id/btn_lock"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_clover"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/open_lock_screen"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:tint="#5F6368" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/btn_add_tab"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add_tab"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_add_tab"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:tint="#5F6368" />

        <ImageButton
            android:id="@+id/btn_allowlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_allowlist_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/allowlist_add_site"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:tint="#5F6368" />

        <FrameLayout
            android:id="@+id/toolbar_tabs_frame"
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/btn_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_tabs"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/btn_tabs"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:tint="#5F6368" />

            <TextView
                android:id="@+id/tab_count_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_tab_count_badge"
                android:gravity="center"
                android:minWidth="24dp"
                android:minHeight="24dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:textColor="#5F6368"
                android:textSize="12sp"
                android:visibility="visible" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/settings_menu"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:tint="#5F6368" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0B0F17"
        app:itemIconTint="@color/bottom_nav_item_tint"
        app:itemTextColor="@color/bottom_nav_item_tint"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav" />
</LinearLayout>
